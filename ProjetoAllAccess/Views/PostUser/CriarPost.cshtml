    <div class="container col-md-8 " >
    <form method="post" >
        <div class="form-floating">
              <input class="form-control" id="Nome" placeholder="Nome" >
              <label for="floatingNome">Titulo do Post</label>
            </div>
            <div class="form-floating">
                <input class="form-control" id="Sobrenome" placeholder="Sobrenome" >
              <label for="floatingSobrenome">Descrição</label>
            </div>
        <div class="form-floating" >
                <select list="browsers" name="browser" class="form-control" id="materia" >
                <datalist>
                    <option value="Matemática">Matemática</option>
                    <option value="Fisica">Fisica</option>
                    <option value="Outro">Outro</option>
                </datalist>
                </select>
                
            </div>
        <textarea id="summernote" name="editordata"></textarea>
        <div class="row w3-row-padding form-group" >
                <button class="w-50 btn btn-lg btn-primary" type="submit" value="CriarConta">Criar</button>
                <a asp-controller="Login" asp-action="Login" type="button" class="w-50 btn btn-lg btn-success">Voltar</a>
            </div>
            
            <p class="mt-5 mb-3 text-muted">© 2022 - Plataforma All Access</p>
    </form>

        
    </div>
