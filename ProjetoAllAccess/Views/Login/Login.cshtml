@{
    @model LoginModel
    Layout = "";
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
    <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoAllAccess</title>
    <link rel="icon" href="/images/AC-icon-logo.svg" type="image/svg+xml" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/w3.css">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoAllAccess.styles.css" asp-append-version="true" />
    <!-- Favicons -->
<link rel="apple-touch-icon" href="/docs/5.2/assets/img/favicons/apple-touch-icon.png" sizes="180x180">
<link rel="icon" href="/docs/5.2/assets/img/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
<link rel="icon" href="/docs/5.2/assets/img/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
<link rel="manifest" href="/docs/5.2/assets/img/favicons/manifest.json">
<link rel="mask-icon" href="/docs/5.2/assets/img/favicons/safari-pinned-tab.svg" color="#712cf9">
<link rel="icon" href="/docs/5.2/assets/img/favicons/favicon.ico">
<meta name="theme-color" content="#712cf9">


    

    </head>
   <body class="text-center">
<main class="form-signin w-100 m-auto">
        @if (TempData["MensagemErro"] != null)

{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>

}
        @if (TempData["MensagemSucesso"] != null)

        {
            <div class="alert alert-success" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
                @TempData["MensagemSucesso"]
            </div>

        }
        @if (TempData["MensagemErrou"] != null)

        {
            <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
                @TempData["MensagemErrou"]
            </div>

        }
  <form asp-action="Entrar" method="post">
    <img class="mb-4" src="/images/logo_final.png" alt="" width="200" height="180">
            <h1 class="h3 mb-3 fw-normal"><b>Faça login ou crie sua conta.</b></h1>

    <div class="form-floating">
        <input type="email" asp-for="Login" class="form-control" id="login" aria-describedby="emailAjuda" placeholder="name@example.com">
        @Html.ValidationMessageFor(x => x.Login)
        <label for="login">Email</label>
    </div>
    <div class="form-floating">
        <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Password">
        @Html.ValidationMessageFor(x => x.Senha)
        <label for="senha">Senha</label>
    </div>
    <div>
        <button type="submit" class="w-60 btn btn-lg btn-primary">Acessar</button>
        <a asp-action="Index" type="button" class="w-60 btn btn-lg btn-success">Voltar</a>
    </div>
    
            <b>Ainda não tem uma conta? Cadastre-se! É grátis e sempre será.</b><br />
    <a asp-controller="Conta"asp-action="CriarConta" type="button" class="w-100 btn btn-lg btn-danger">Cadastre-se</a>
            <!--<p class="mx-auto mb-4 text-sm"><a asp-action="RedefinirSenha" class="text-primary text-gradient font-weight-bold">Esqueci a senha</a></p>-->
    <p class="mt-5 mb-3 text-muted">© 2023 - Plataforma All Access</p>
  </form>

  <!-- VLIBRAS LOGIN -->
        <!-- PLUGIN VLIBRAS-->
        <div vw class="enabled">
            <div vw-access-button class="active"></div>
            <div vw-plugin-wrapper>
                <div class="vw-plugin-top-wrapper"></div>
            </div>
        </div>
        <script src="https://vlibras.gov.br/app/vlibras-plugin.js"></script>
        <script>
            new window.VLibras.Widget('https://vlibras.gov.br/app');
        </script>
        <script type="text/javascript" src="~/js/main.bundle.js"></script>
        <script>
            var labels = {
                resetTitle: 'Voltar aos padrões',
                closeTitle: 'Fechar',
                menuTitle: 'Menu de Accessibilidade do All Access',
                increaseText: 'Aumentar o tamanho do texto',
                decreaseText: 'Diminuir o tamanho do texto',
                increaseTextSpacing: 'Aumentar o espaçamento do texto',
                decreaseTextSpacing: 'Diminuir o espaçamento do texto',
                increaseLineHeight: 'Aumentar a altura entre linhas',
                decreaseLineHeight: 'Diminuir a altura entre linhas',
                invertColors: 'Inverter cores',
                grayHues: 'Escalas de cinza',
                underlineLinks: 'Sublinhar links',
                bigCursor: 'Cursor grande',
                readingGuide: 'Guia de leitura (TDAH)',
                textToSpeech: 'Texto para fala',
                speechToText: 'Fala para texto',
                disableAnimations: 'Desativar animações'
            };

            var options = {
                labels: labels,
                icon: {
                    circular: true,
                    img: 'accessible',
                    position: {
                        top: { size: 50, units: 'vh' },
                        left: { size: 2, units: '%' },
                        type: 'fixed'
                    }

                },
                hotkeys: {
                    enabled: true
                }
            };

            options.textToSpeechLang = 'pt-BR';
            options.speechToTextLang = 'pt-BR';



            new Accessibility(options);
        </script>

</main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   
    
  

</body>

</html>